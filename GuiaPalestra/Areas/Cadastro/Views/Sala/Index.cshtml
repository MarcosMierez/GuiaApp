@model IEnumerable<GuiaPalestra.Models.Sala>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
   <a href="@Url.Action("Cadastrar","Sala")">Nova Sala</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumeroSala)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroSala)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            <a href="@Url.Action("Detalhe", "Sala", new {id = @item.ID})" class="glyphicon glyphicon-book"></a>
            <a href="@Url.Action("Editar", "Sala", new {id = @item.ID})" class="glyphicon glyphicon-pencil"></a>
            <a href="@Url.Action("Delete","Sala",new{id=@item.ID})" class="glyphicon glyphicon-remove"></a>
        </td>
    </tr>
}

</table>
