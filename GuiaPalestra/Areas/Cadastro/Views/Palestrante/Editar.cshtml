@model GuiaPalestra.ViewModel.PalestranteVM

<h2 class="headers">Alterar Dados</h2>
<div class="card-panel grey lighten-5 z-depth-1">
    <form class="col s12" method="POST" action="" enctype="multipart/form-data">
        @Html.HiddenFor(model => model.ID)
        <div class="center-align">
            <div class="col s2">
                <img src="~/Content/Uploads/Palestrante/@Model.PhotoPath" class="circle" alt="" width="100" height="100" />
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <i class="mdi-action-perm-contact-cal prefix"></i>
                <input type="text" value="@Model.Nome" id="Nome" name="Nome">
                <label>Nome</label>
            </div>
            <div class="input-field col s12">
                <i class="mdi-communication-email prefix"></i>
                <input type="text" class="validate" value="@Model.Email" id="Email" name="Email">
                <label>Email</label>
            </div>
            <div class="input-field col s12">
                <i class="mdi-action-perm-identity prefix"></i>
                <input type="text" class="validate" value="@Model.TwitterPalestrante" id="TwitterPalestrante" name="TwitterPalestrante">
                <label>Twitter</label>
            </div>
            <div class="input-field col s12">
                <input type="file" name="Photo" id="Photo" />
            </div>
        </div>
        <p class="right-align">
            <button class="waves-effect waves-light btn green">Editar</button>
        </p>
    </form>
</div>
