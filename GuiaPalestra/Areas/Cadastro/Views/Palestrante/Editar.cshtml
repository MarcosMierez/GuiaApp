@model GuiaPalestra.ViewModel.PalestranteVM

<h2>Editar</h2>

@Html.ValidationSummary(true)
<form action="" method="POST" enctype="multipart/form-data">

    <div class="form-horizontal">
        <h4>Palestrante</h4>
        <hr />

        @Html.HiddenFor(model => model.ID)
        <img src="~/Content/Uploads/Palestrante/@Model.PhotoPath" alt="" class="img-rounded" height="150" width="150"/>
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TwitterPalestrante, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TwitterPalestrante, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TwitterPalestrante, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <input type="file" id="Photo" name="Photo" value="@Model.Photo"/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Editar" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
