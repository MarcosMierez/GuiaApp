@model IEnumerable<GuiaPalestrasOnline.Models.Palestrante>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Cadastrar","Palestrante")">Novo Palestrante</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TwitterPalestrante)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TwitterPalestrante)
            </td>
            <td>
                <a href="@Url.Action("Detalhe", "Palestrante",new{id=@item.ID})" class="glyphicon glyphicon-book"></a>
                <a href="@Url.Action("Editar", "Palestrante", new { id = @item.ID })" class="glyphicon glyphicon-pencil"></a>
                <a href="@Url.Action("Delete","Palestrante",new{id=@item.ID})" class="glyphicon glyphicon-remove"></a>
            </td>
        </tr>
    }

</table>
