@model IEnumerable<GuiaPalestra.Models.Evento>

@{
    if (!Model.Any())
    {
        <div class="card" style="padding: 10px">
            <div class="row">
                <img src="~/Content/confira-as-palestras-do-centro-espirita-fe-e-caridade.jpg" class="responsive-img"/>
                <div class="col s12 m12">
                    <div class="card purple darken-3">
                        <div class="card-content white-text">
                            <span class="card-title">Nenhum evento encontrado</span>
                            <p>
                               Você nao esta inscrito em  nenhum evento
                            </p>
                        </div>
                        <div class="card-action">
                            <a href="@Url.Action("EventosDisponiveis", "Usuario")">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }
    else
    {
        <h2>Eventos Disponiveis</h2>
    <div class="row">
        @foreach (var evento in Model)
        {

            <div class="col m4">
                <div class="card small">
                    <div class="card-content">
                        <ul id="contentEnvento">
                            <li>@evento.Tema</li>
                            <li>
                                <br />
                            </li>
                            <li>Local : @evento.Local</li>
                            <li>Dia Inicial : @evento.DiaInicial.ToString("dd/MM/yyyy") </li>
                            <li>Dia Final : @evento.DiaFinal.ToString("dd/MM/yyyy") </li>
                        </ul>
                    </div><br />
                    <div class="right-align">
                        <a href="@Url.Action("MinhasPalestras", "Usuario", new {id = @evento.ID})" class="btn-floating btn-large waves-effect waves-light blue"><i class="mdi-image-dehaze"></i></a>
                        <a href="@Url.Action("RelatorioDePalestras", "Usuario", new {id = @evento.ID})" class="btn-floating btn-large waves-effect waves-light grey"><i class="mdi-av-my-library-books"></i></a>
                        <a class="btn-floating btn-large waves-effect waves-light orange" href="@Url.Action("Index","Usuario")"><i class="mdi-hardware-keyboard-backspace"></i></a>

                    </div>
                </div>
            </div>

        }
    </div>
    }
}
    <div style="clear:both"></div>

