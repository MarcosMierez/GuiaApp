@model IEnumerable<GuiaPalestra.Models.Evento>


<h2 class="headers">Eventos</h2>
@{
    if (!Model.Any())
    {
      <p class="headers">Ainda nao há eventos disponiveis</p>
    }
    else
    {
        <div class="row">
            @foreach (var evento in Model)
            {

                <div class="col m4">
                    <div class="card small">
                        <div class="card-content">
                            <ul id="contentEnvento">
                                <li>@evento.Tema</li>
                                <li>
                                    <br/>
                                </li>
                                <li>Local : @evento.Local</li>
                                <li>Dia Inicial : @evento.DiaInicial.ToString("dd/MM/yyyy") </li>
                                <li>Dia Final : @evento.DiaFinal.ToString("dd/MM/yyyy") </li>
                            </ul>
                        </div><br/>
                        <div class="right-align">
                            <a href="@Url.Action("PalestrasEvento", "Usuario", new {id = @evento.ID})" class="btn-floating btn-large waves-effect waves-light blue"><i class="mdi-image-dehaze"></i></a>
                            <a href="@Url.Action("Detalhe", "Coordenador", new {id = @evento.CoordenadorId})" class="btn-floating btn-large waves-effect waves-light green"><i class="mdi-action-perm-identity"></i></a>
                        </div>
                    </div>
                </div>

            }
        </div>
    }
}
<div style="clear:both"></div>


